<% flash.each do |type, message| %>
  <% alert_class = {
    notice: "alert-success",
    alert: "alert-danger",
    error: "alert-danger",
    warning: "alert-warning"
  }[type.to_sym] || "alert-info" %>

  <div class="alert <%= alert_class %> alert-dismissible fade show d-flex justify-content-between align-items-center" role="alert">
    <span><%= message %></span>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
  </div>
<% end %>
