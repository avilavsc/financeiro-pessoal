<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">

      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Categorias</h2>
        <%= link_to "Nova categoria", new_category_path, class: "btn btn-success" %>
      </div>

      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th>Nome</th>
              <th class="text-end">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><%= category.name %></td>
                <td class="text-end">
                  <%= link_to edit_category_path(category), class: "btn btn-warning btn-sm me-1", title: "Editar" do %>
                    <i class="bi bi-pencil-square"></i>
                  <% end %>

                  <%= link_to category_path(category),
                      data: { turbo_method: :delete, turbo_confirm: 'Tem certeza?' },
                      class: "btn btn-danger btn-sm", title: "Excluir" do %>
                    <i class="bi bi-trash"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>
