<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">

      <div class="card shadow-sm">
        <div class="card-body">
          <h1 class="h4 mb-4 text-center">Entrar</h1>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-3">
              <%= f.input :email,
                          label: "E-mail",
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: "form-control" } %>
            </div>

            <div class="mb-3">
              <%= f.input :password,
                          label: "Senha",
                          required: false,
                          input_html: { autocomplete: "current-password", class: "form-control" } %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-3">
                <%= f.input :remember_me, as: :boolean, inline_label: 'Lembrar-me' %>
              </div>
            <% end %>

            <div class="d-grid gap-2">
              <%= f.button :submit, "Entrar", class: "btn btn-primary" %>
            </div>
          <% end %>

          <div class="mt-3 text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
